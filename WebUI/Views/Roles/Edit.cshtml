@using Microsoft.AspNetCore.Identity
@model WebUI.ViewModels.ChangeRoleViewModel

<h2>Изменение ролей для пользователя @Model.UserName</h2>
<a class="nav-link text-dark" asp-area="" asp-controller="Roles" asp-action="Index">Назад</a>
<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>